<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/layout_contact"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/sixteen_dp"
        android:background="?selectableItemBackground"
        >

        <RelativeLayout
            android:id="@+id/rl_initial"
            android:layout_width="40dp"
            android:layout_height="55dp">
            <ImageView android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/contact_initial"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rushabh Padalia"
            android:textColor="@color/black"
            android:layout_marginLeft="72dp"
            android:textSize="@dimen/sixteen_sp"
            android:id="@+id/txt_contactname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/fourteen_sp"
            android:text="Last Called : Today"
            android:id="@+id/txt_lastcallsince"
            android:layout_below="@+id/txt_contactname" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/sixteen_sp"
            android:text="20 Dec"
            android:id="@+id/txt_lastcalldate" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="88dp"
        android:layout_below="@+id/layout_contact"
        android:background="@color/grey"/>

</RelativeLayout>